{
    "family": "signalfx-tracegenerator",
    "networkMode": "awsvpc",
    "containerDefinitions": [
        {
            "name": "trace-generator",
            "image": "stevelsplunk/signalfx:apm1",
            "entryPoint": [
                "bash",
                "-c"
            ],
            "portMappings": [
                    { "containerPort": 443 },
                    { "containerPort": 9080 }
            ],
            "logConfiguration": {
                "logDriver": "awslogs",
                "options": {
                    "awslogs-group": "ecs",
                    "awslogs-region": "us-east-2",
                    "awslogs-stream-prefix": "ecs"
                }
            },
            "workingDirectory": "/home/code/apm/apm-java/http-requests",
            "command": [
                "sh run.sh"
            ],
            "environment": [
                {
                    "name": "SIGNALFX_SERVICE_NAME",
                    "value": "TRACE-GENERATOR"
                },
                {
                    "name": "SIGNALFX_ENDPOINT_URL",
                    "value": "http://localhost:9080/v1/trace"
                }
            ],
            "dockerLabels": {
                "app": "trace-generator"
            }
        }
    ],
    "executionRoleArn": "arn:aws:iam::YOURACCOUNTIDHERE:role/ecsTaskExecutionRole",
    "cpu": "256",
    "memory": "512",
    "requiresCompatibilities": [
        "FARGATE"
    ]
}
