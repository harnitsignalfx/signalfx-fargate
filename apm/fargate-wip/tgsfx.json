{
    "family": "signalfx-demo",
    "networkMode": "awsvpc",

    "containerDefinitions": [
        {
            "entryPoint": [
                "bash",
                "-c"
            ],
            "portMappings": [
		    { "containerPort": 9080 }
	    ],
            "logConfiguration": {
                "logDriver": "awslogs",
                "options": {
                    "awslogs-group": "ecs",
                    "awslogs-region": "us-east-2",
                    "awslogs-stream-prefix": "sfxagent"
                }
            },
            "command": [
                "curl --fail $CONFIG_URL > /etc/signalfx/agent.yaml && exec /bin/signalfx-agent"
            ],
            "environment": [
                {
                    "name": "ACCESS_TOKEN",
                    "value": "W-d2QuxAAkrgCockbk81RA"
                },
                {
                    "name": "INGEST_URL",
                    "value": "https://ingest.us0.signalfx.com"
                },
                {
                    "name": "API_URL",
                    "value": "https://api.us0.signalfx.com"
                },
                {
                    "name": "CONFIG_URL",
                    "value": "https://raw.githubusercontent.com/slernersplunk/agent/master/fargate/agent.yaml"
                }
            ],
            "dockerLabels": {
                "app": "signalfx-agent"
            },
            "name": "signalfx-agent",
            "image": "quay.io/signalfx/signalfx-agent:5.3.2"
        },

        {
            "name": "trace-generator",
	    "dockerLabels": {
		    "agent.signalfx.com.port.9080": "true"
	    },
            "image": "stevelsplunk/signalfx:apm1",
            "entryPoint": [
                "bash",
                "-c"
            ],
            "portMappings": [],
            "logConfiguration": {
                "logDriver": "awslogs",
                "options": {
                    "awslogs-group": "ecs",
                    "awslogs-region": "us-east-2",
                    "awslogs-stream-prefix": "tracegenerator"
                }
            },
	    "workingDirectory": "/home/code/apm/apm-java/http-requests",
            "command": [
                "sh run.sh"
            ],
            "environment": [
                {
                    "name": "ACCESS_TOKEN",
                    "value": "W-d2QuxAAkrgCockbk81RA"
                },
                {
                    "name": "SIGNALFX_SERVICE_NAME",
                    "value": "TRACE-GENERATOR"
                },
                {
                    "name": "SIGNALFX_ENDPOINT_URL",
                    "value": "http://localhost:9080/v1/trace"
                }
            ],
            "dockerLabels": {
                "app": "trace-generator"
            }
	}
    ],
    "executionRoleArn": "arn:aws:iam::668132022375:role/ecsTaskExecutionRole",
    "cpu": "256",
    "memory": "512",
    "requiresCompatibilities": [
        "FARGATE"
    ]

}
